.topbar
  .fill
    .container
      %a.brand{:href => "#"} Socket Chat
      %ul.nav
        %li.active
          %a{:href => "#"} Home
        %li
          %a{:href => "#about"} About
        %li
          %a{:href => "#contact"} Contact
      - if logged_in?
        %ul.nav.secondary-nav
          %li.dropdown#user_dropdown{:data => {:dropdown => 'dropdown'}}
            %a.dropdown-toggle{:href => "#"}= current_user.email
            %ul.dropdown-menu
              %li
                %a{:href => "#"} My Profile
              %li.divider
              %li
                %a{:href => "/user/logout"} Logout
      - else
        %form#login.pull-right{:action => "/user/login", :method => "post"}
          %input.input-small{:placeholder => "Email", :type => "text", :name => "email"}
          %input.input-small{:placeholder => "Password", :type => "password", :name => "password"}
          %button.btn{:type => "submit"} Sign in